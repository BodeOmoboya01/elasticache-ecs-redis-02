# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

aws_region = "us-east-1"
project_name = "redis-ecs-demo"
environment = "dev"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# ElastiCache Configuration
redis_node_type = "cache.t3.micro"  # Cheapest option
redis_engine_version = "7.0"

# ECS Configuration
ecs_task_cpu = "256"     # 0.25 vCPU
ecs_task_memory = "512"  # 0.5 GB
ecs_desired_count = 1    # Single instance
use_fargate_spot = true  # Use Spot for cost savings
